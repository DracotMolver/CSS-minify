{
    "extends": "airbnb-base",
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "chai": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "no-useless-escape": "warn",
        "no-confusing-arrow": "off",
        "class-methods-use-this": "off",
        "valid-typeof": "warn",
        "arrow-parens": "off",
        "constructor-super": "warn",
        "implicit-arrow-linebreak": "off",
        "indent": "off",
        "comma-dangle": "off",
        "linebreak-style": "off",
        "operator-linebreak": "off",
        "function-paren-newline": "off"
    }
}